<div class="row">
  <div class="col s12">
    <h3 class="center-align">Lista de cursos</h3>
  </div>
</div>
<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6 hoverable">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Codigo: <%= course.short_name %></span>
          <p>Nome: <%= course.name %></p>
          <p>Descrição: <%= course.description %></p>
        </div>
        <div class="card-action">
          <% if logged_in? && !current_user.courses.include?(course)%>
            <%= link_to "Inscreva-se", enroll_path(course_id: course.id), method: :post %>
          <% end %>
          <a href="#">+Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
