<div class="row">
  <div class="col s12">
    <h3 class="center-align">Lista de cursos</h3>
  </div>
</div>
<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6 card-panel hoverable">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Codigo: <%= course.short_name %></span>
          <p>Nome: <%= course.name %></p>
          <p>Descrição: <%= course.description %></p>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
          <a href="#">This is a link</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
