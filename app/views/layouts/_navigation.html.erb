<header>
  <ul id="dropdown1" class="dropdown-content">
    <li><%= session_link %></li>
    <% if logged_in? %>
      <li> <%= link_to "Perfil", current_user %></li>
    <% end %>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <li><%= session_link %></li>
    <li> <%= link_to "Ver Perfil", current_user %> </li>
  </ul>
  <ul id="mobile-demo" class="sidenav">
    <li><%= link_to "Cursos", root_path %></li>
    <% if logged_in? %>
      <li><%= link_to "Estudantes", students_path%></li>
    <% end %>
    <li><a class="dropdown-trigger" data-target="dropdown2">Conta<i class="material-icons right">arrow_drop_down</i></a></li>
  </ul>
  <nav>
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to root_path, class: "brand-logo right" do %>
          <i class="material-icons">important_devices</i>
          Tech
        <% end %>
        <a data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="left hide-on-med-and-down">
          <li><%= link_to "Cursos", root_path%></li>
          <% if logged_in? %>
            <li><%= link_to "Estudantes", students_path%></li>
          <% else %>
            <li><%= link_to "Criar Conta", new_student_path %></li>
          <% end %>
          <li><a class="dropdown-trigger"  data-target="dropdown1">Conta<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>
